[Unit]
Description=Web-based software to manage a non-profit food coop
After=network.target

[Service]
Type=forking
User=__APP__
Group=__APP__
WorkingDirectory=__FINALPATH__/
EnvironmentFile=__FINALPATH__/foodsoft.env
ExecStart=/opt/rbenv/versions/__RUBY_VERSION__/bin/passenger start --daemonize --environment production --ruby /opt/rbenv/versions/__RUBY_VERSION__/bin/ruby --max-pool-size 16 --port __PORT__
ExecStop=/opt/rbenv/versions/__RUBY_VERSION__/bin/passenger stop --pid-file __FINALPATH__/passenger.__PORT__.pid.lock

[Install]
WantedBy=multi-user.target
